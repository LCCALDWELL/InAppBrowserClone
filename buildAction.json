{
  "actions": [
    {
      "name": "RemoveCameraAndMicPermissions",
      "type": "xmlEdit",
      "target": "android/app/src/main/AndroidManifest.xml",
      "edits": [
        {
          "xpath": "/manifest/uses-permission[@android:name='android.permission.CAMERA']",
          "operation": "remove",
          "namespaces": { "android": "http://schemas.android.com/apk/res/android" }
        },
        {
          "xpath": "/manifest/uses-permission[@android:name='android.permission.RECORD_AUDIO']",
          "operation": "remove",
          "namespaces": { "android": "http://schemas.android.com/apk/res/android" }
        }
      ]
    }
  ]
}
